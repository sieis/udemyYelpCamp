<%- include("../partials/header") %> 
<div class="mt-3 text-center">
    <h2>Edit Comment</h1>
        <form class="form mx-auto w-75" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <!-- use name attirubte to grab the data from the request body -->
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group mx-auto w-25">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
    <a href="/campgrounds">go back</a>
</div>
