<%- include("../partials/header") %> 
<div class="mt-3 text-center">
    <h2>Add New Comment to <%= campground.name %> </h1>
        <!-- this action needs to be the post route we created by convention to be campgrounds back on the app.js page -->
        <form class="form mx-auto w-75" action="/campgrounds/<%= campground._id %>/comments " method="POST">
            <!-- use name attirubte to grab the data from the request body -->
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="comment text">
            </div>
            <div class="form-group mx-auto w-25">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">go back</a>
</div>
